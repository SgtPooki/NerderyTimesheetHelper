{
  "manifest_version": 2,
  "name": "Nerdery Timesheet Helper",
  "description": "Helps you use the nerdery timesheet more quickly using keyboard shortcuts",
  "homepage_url": "https://github.com/bitwalker/NerderyTimesheetHelper",
  "version": "1.3",
  "icons": {
    "128": "icon.png"
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://mainframe.nerdery.com/timesheet.php*"],
      "js": [
        "lib/toolbox.js",
        "lib/moment.min.js",
        "lib/jquery.min.js",
        "lib/plugins.js",
        "keybindings.js",
        "lib/timesheet.js"
      ]
    }
  ],
  "permissions": [
      "https://mainframe.nerdery.com/timesheet.php",
      "https://mainframe.nerdery.com/timesheet.php?",
      "https://mainframe.nerdery.com/timesheet.php*",
      "https://mainframe.nerdery.com/timesheet.php?*"
  ],
  "update_url": "https://github.com/bitwalker/NerderyTimesheetHelper/raw/master/updates.xml"
}
